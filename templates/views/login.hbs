    <div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/login" method="post">
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                <label for="username" class="text-info">Username:</label><br>
                                <input type="text" name="email" id="username" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info">Password:</label><br>
                                <input type="password" name="password" id="password" class="form-control" required>
                            </div>
                            {{#if incorrectPassword}}
                            <div class='form-group'>
                                Invalid Email/Password. Please try again.
                            </div>
                            {{/if}}
                            <div class="flex-div">
                                <div class="form-group">
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Sign In">
                                </div>
                                <div class='form-group' id="register-link">
                                    <a href="/register" class="text-info">Register here</a>
                                </div>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    

